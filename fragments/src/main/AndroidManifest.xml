<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.guides.fragments.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SimpleFragmentActivity"/>
        <activity android:name=".SwitcherFragmentActivity"/>
        <activity android:name=".BackStackFragmentActivity"/>
        <activity android:name=".TabsActivity" android:label="@string/tabs"/>
        <activity android:name=".PagerActivity" android:label="@string/pager"/>
        <activity android:name=".ActionBarTabsActivity"/>
        <activity android:name=".PagerTabsActivity" android:label="@string/pager_tabs"/>
        <activity android:name=".DrawerActivity" android:label="@string/drawer"/>
    </application>

</manifest>
